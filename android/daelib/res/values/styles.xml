<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="DarkOldTheme" parent="@style/Theme.Sherlock">
        <item name="@android:attr/textColorPrimary">@color/white</item>
        <item name="@android:attr/textColorSecondary">@color/white</item>
        <item name="@android:attr/spinnerStyle">@style/Widget.Spinner.Dark</item>
        <item name="@attr/contentViewBackground">@drawable/darkbg</item>
        <item name="@attr/contentListViewHeaderBackground">@color/black</item>
        <item name="@attr/contentHelpIcon">@drawable/help_icon_white</item>
        <item name="@attr/contentTabStyle">tabHost</item>
        <item name="@attr/contentContactListItem">@layout/non_check_list_item</item>
        <item name="@attr/contentFavoritesEnabled">false</item>
        <item name="@attr/contentThumbsEnabled">false</item>
        <item name="@attr/contentThumbsUpIcon">@drawable/thumbsup</item>
        <item name="@attr/contentThumbsDownIcon">@drawable/thumbsdown</item>
        <item name="@attr/contentToolUseScoringEnabled">false</item>
        <item name="@attr/contentListPreferredItemPaddingLeft">6dip</item>
        <item name="@attr/contentListPreferredItemPaddingRight">6dip</item>
        <item name="@attr/contentListChoiceBackgroundIndicator">@android:drawable/list_selector_background</item>
        <item name="@attr/contentTextAppearanceListItem">?android:attr/textAppearanceLarge</item>
    </style>
  
    <style name="NewTheme" parent="@style/Theme.Sherlock.Light">
        <item name="@android:attr/spinnerStyle">@style/Widget.Spinner.Dark</item>
        <item name="@attr/contentViewBackground">@color/white</item>
        <item name="@attr/contentListViewHeaderBackground">@color/lightgray</item>
        <item name="@attr/contentHelpIcon">@drawable/help_icon_black</item>
        <item name="@attr/contentTabStyle">actionBar</item>
        <item name="@attr/contentFavoritesEnabled">false</item>
        <item name="@attr/contentThumbsEnabled">false</item>
        <item name="@attr/contentThumbsUpIcon">@drawable/thumbsup</item>
        <item name="@attr/contentThumbsDownIcon">@drawable/thumbsdown</item>
        <item name="@attr/contentContactListItem">@layout/non_check_list_item</item>
        <item name="@attr/contentToolUseScoringEnabled">false</item>
        <item name="@attr/contentListPreferredItemPaddingLeft">?android:attr/listPreferredItemPaddingLeft</item>
        <item name="@attr/contentListPreferredItemPaddingRight">?android:attr/listPreferredItemPaddingRight</item>
        <item name="@attr/contentListChoiceBackgroundIndicator">?android:attr/listChoiceBackgroundIndicator</item>
        <item name="@attr/contentTextAppearanceListItem">?android:attr/textAppearanceListItem</item>
    </style>

    <style name="DefaultTheme" parent="DarkOldTheme" />

    <style name="Widget.Spinner.Dark" parent="@android:style/Widget.Spinner">
        <item name="@android:attr/textColorPrimary">@color/black</item>
        <item name="@android:attr/textColorSecondary">@color/black</item>
    </style>
    
    <color name="list_selection">#FF80d000</color>
    <color name="list_unselection">#FF000000</color>

	<style name="SplashScreen" parent="@android:style/Theme.Dialog">
		<item name="android:layout_width">fill_parent</item>
    	<item name="android:layout_height">fill_parent</item>
        <item name="android:padding">0dp</item>
        <item name="android:windowFrame">@null</item>
	    <item name="android:windowBackground">@android:color/transparent</item>
	    <item name="android:windowContentOverlay">@null</item>
	    <item name="android:windowNoTitle">true</item>
	    <item name="android:windowIsFloating">true</item>
	    <item name="android:backgroundDimEnabled">false</item>
    </style>
</resources>